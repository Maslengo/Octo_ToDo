<Ui>
	<Frame name="MyAddonEditFrameTemplate" movable="true" resizable="true" enableMouse="true" inherits="DialogBoxFrame" hidden="true" virtual="true">
		<Size x="700" y="800"/>
		<Frames>
			<EventFrame parentKey="scrollBar" inherits="WowTrimScrollBar">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-20" y="-20"/>
					<Anchor point="BOTTOMRIGHT" x="-20" y="50"/>
				</Anchors>
			</EventFrame>
			<Frame parentKey="editFrame" inherits="ScrollingEditBoxTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="20" y="-20"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.scrollBar" relativePoint="BOTTOMLEFT" x="-4" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color r=".1" g=".1" b=".1" a=".8"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Button parentKey="resize">
				<Size x="16" y="16"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
				</Anchors>
				<NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up"/>
				<HighlightTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Highlight"/>
				<PushedTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Down"/>
			<Scripts>
				<OnDragStart>
					local parent = self:GetParent()
					parent:StartSizing("BOTTOMRIGHT", true)
				</OnDragStart>
				<OnDragStop>
					self:GetParent():StopMovingOrSizing()
				</OnDragStop>
			</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self.resize:RegisterForDrag("LeftButton")
				self:SetBackdrop({
					bgFile = "Interface\\Buttons\\WHITE8X8",
					edgeFile = "Interface\\Buttons\\WHITE8X8",
					tile = true,
					tileSize = 32,
					edgeSize = 1,
					insets = {left = 1, right = 1, top = 1, bottom = 1},
				})
				self:SetBackdropColor(14/255, 14/255, 14/255, 0.8)
				self:SetBackdropBorderColor(0, 0, 0, 1)
				local scrollBox = self.editFrame:GetScrollBox()
				scrollBox:SetAllPoints(self.editFrame)
				ScrollUtil.RegisterScrollBoxWithScrollBar(scrollBox, self.scrollBar)
			</OnLoad>
			<OnMouseDown>
				if (button == "LeftButton") then
					self:StartMoving()
				end
			</OnMouseDown>
			<OnMouseUp>
				self:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>